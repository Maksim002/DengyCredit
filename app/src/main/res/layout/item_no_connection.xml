<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_error_internet"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#001"
        android:gravity="center"
        android:textSize="17sp"
        android:text="Ууупс!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#001"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:text="Похоже, что Вы не подключены к Интернету."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#001"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="9dp"
        android:text="Проверьте подключение к Интернету и повторите попытку."/>

    <Button
        android:id="@+id/no_connection_repeat"
        style="@style/RoundedOrangeBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="ПОВТОРИТЬ"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>