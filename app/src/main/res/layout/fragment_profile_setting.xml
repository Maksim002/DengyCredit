<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/profile_s_swipe"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_setting_layout"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/profile_layout_orange"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/orangeColor"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_setting_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/ic_proo"
                app:civ_border_color="#fefefe"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_layout_orange"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profile_tube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_photo"
                app:layout_constraintBottom_toBottomOf="@+id/profile_setting_image"
                app:layout_constraintRight_toRightOf="@+id/profile_setting_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/profile_layout_orange"
                app:layout_constraintLeft_toRightOf="@+id/profile_setting_image">

                <TextView
                    android:id="@+id/profile_setting_fio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    tools:text="Данил Черепанов"
                    android:textColor="@color/whiteColor"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/profile_tube"
                app:layout_constraintStart_toEndOf="@+id/profile_tube"
                app:layout_constraintTop_toTopOf="@+id/profile_tube">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_a_tube" />

                <com.santalu.maskedittext.MaskEditText
                    android:id="@+id/profile_setting_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingRight="34dp"
                    android:enabled="false"
                    android:background="@null"
                    android:windowSoftInputMode="adjustResize"
                    android:inputType="textPersonName"
                    android:drawableRight="@drawable/ic_editing_grey"
                    android:layout_marginLeft="11dp"
                    tools:text="+996 700 700 540"
                    android:textColor="@color/blackColor"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_tube"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Фамилия"/>

                            <EditText
                                android:id="@+id/profile_setting_second_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#001"
                                android:background="@null"
                                android:enabled="false"
                                android:inputType="textPersonName"
                                android:textSize="17sp"
                                tools:text="Черепанов"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Имя"/>

                            <EditText
                                android:id="@+id/profile_setting_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#001"
                                android:background="@null"
                                android:enabled="false"
                                android:inputType="textPersonName"
                                android:textSize="17sp"
                                tools:text="Данил"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Отчество"/>

                            <EditText
                                android:id="@+id/profile_setting_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#001"
                                android:background="@null"
                                android:enabled="false"
                                android:windowSoftInputMode="adjustResize"
                                android:inputType="textPersonName"
                                android:textSize="17sp"
                                tools:text="Валерьевич"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Дата рождения"/>

                            <TextView
                                android:id="@+id/profile_setting_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:background="@null"
                                android:enabled="false"
                                android:inputType="textPersonName"
                                tools:text="05.07.1992"
                                android:textColor="#001"
                                android:textSize="17sp"
                                android:windowSoftInputMode="adjustResize" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Пол"/>

                            <AutoCompleteTextView
                                android:id="@+id/profile_setting_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#001"
                                android:enabled="false"
                                android:background="@null"
                                android:windowSoftInputMode="adjustResize"
                                android:inputType="textPersonName"
                                android:textSize="17sp"
                                tools:text="Мужской"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Гражданство"/>

                            <AutoCompleteTextView
                                android:id="@+id/profile_s_nationality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#001"
                                android:background="@null"
                                android:enabled="false"
                                android:windowSoftInputMode="adjustResize"
                                android:inputType="textPersonName"
                                android:textSize="17sp"
                                tools:text="Русский"/>
                        </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="код"/>

                            <AutoCompleteTextView
                                android:id="@+id/profile_s_mask"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#001"
                                android:background="@null"
                                android:windowSoftInputMode="adjustResize"
                                android:inputType="number"
                                android:textSize="17sp"
                                tools:text="+996"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_weight="0.4"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/profile_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Номер телефона"/>

                            <com.santalu.maskedittext.MaskEditText
                                android:id="@+id/profile_setting_second_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#001"
                                android:editable="false"
                                android:ellipsize="end"
                                android:digits="012345678"
                                android:imeOptions="actionDone"
                                android:background="@null"
                                android:windowSoftInputMode="adjustResize"
                                android:inputType="number"
                                android:textSize="17sp"
                                tools:text="700 700 540"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/click_s_second"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_editing_text"/>
                    </LinearLayout>

                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Вопрос"/>

                            <AutoCompleteTextView
                                android:id="@+id/profile_s_question"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#001"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:background="@null"
                                android:windowSoftInputMode="adjustResize"
                                android:inputType="textPersonName"
                                android:textSize="17sp"
                                tools:text="Вопрос"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/click_s_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/ic_editing_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle_orange_background_edit"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Ответ"/>

                            <EditText
                                android:id="@+id/profile_s_response"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#001"
                                android:background="@null"
                                android:windowSoftInputMode="adjustResize"
                                android:inputType="textPersonName"
                                android:textSize="17sp"
                                tools:text="Ответ"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/click_s_response"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/ic_editing_text" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle_orange_background_edit"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Введите новый пароль"/>

                        <EditText
                            android:id="@+id/profile_s_one_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:textColor="#001"
                            android:background="@null"
                            android:windowSoftInputMode="adjustResize"
                            android:inputType="text"
                            android:textSize="17sp"
                            tools:hint="поле для вода"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/click_s_one_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_editing_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle_orange_background_edit"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Повторите пароль"/>

                        <EditText
                            android:id="@+id/profile_s_two_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:textColor="#001"
                            android:background="@null"
                            android:windowSoftInputMode="adjustResize"
                            android:inputType="text"
                            android:textSize="17sp"
                            tools:hint="поле для вода"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/click_s_two_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_editing_text" />
                </LinearLayout>

                <Button
                    android:id="@+id/profile_s_enter"
                    style="@style/RoundedOrangeBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:text="Сохранить"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/home_forget_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Обратиться в службу поддержки"
                    android:textColor="#FF9900"
                    android:textSize="15sp" />
            </LinearLayout>

            <include
                android:id="@+id/profile_s_owner"
                layout="@layout/item_focus" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        android:id="@+id/profile_s_access_restricted"
        layout="@layout/item_access_restricted"
        android:visibility="gone" />

    <include
        android:id="@+id/profile_s_no_connection"
        layout="@layout/item_no_connection"
        android:visibility="gone" />

    <include
        android:id="@+id/profile_s_technical_work"
        layout="@layout/item_technical_work"
        android:visibility="gone" />

    <include
        android:id="@+id/profile_s_not_found"
        layout="@layout/item_not_found"
        android:visibility="gone" />
</LinearLayout>