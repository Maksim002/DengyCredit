<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fifth_cross_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_35sdp"
            android:gravity="center"
            android:text="Заявка на займ"
            android:textColor="@color/blackColor"
            android:textSize="18dp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_fifth"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:paddingLeft="14dp"
                android:text="Фото регистрации в РФ:"
                android:textColor="@color/blackColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/russian_federationA"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_orange_background_grey"
                        android:src="@drawable/id" />

                    <ImageView
                        android:id="@+id/russian_federationB"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_orange_background_grey"
                        android:src="@drawable/id" />
                </LinearLayout>

                <TextView
                    android:id="@+id/fifth_incorrectA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_baseline_error_outline_24"
                    android:drawablePadding="10dp"
                    android:text="Неверный логин или пароль"
                    android:textColor="@color/colorRed"
                    android:visibility="gone" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/fifth_goal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_orange_background_grey"
                    android:hint="Дата окончания срока регистрации"
                    android:padding="16dp"
                    android:textColor="@color/blackColor"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fifth_goal_name_error"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:gravity="right"
                    android:text="error"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.ycuwq.datepicker.date.DatePicker
                android:id="@+id/fifth__datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:paddingLeft="14dp"
                android:text="Фото миграционной карты:"
                android:textColor="@color/blackColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/migration_cardA"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_orange_background_grey"
                    android:src="@drawable/id" />

                <ImageView
                    android:id="@+id/migration_cardB"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_orange_background_grey"
                    android:src="@drawable/id" />
            </LinearLayout>


            <TextView
                android:id="@+id/fifth_incorrect_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_baseline_error_outline_24"
                android:drawablePadding="10dp"
                android:text="Неверный логин или пароль"
                android:textColor="@color/colorRed"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp">

                <AutoCompleteTextView
                    android:id="@+id/list_countries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_orange_background_grey"
                    android:drawableEnd="@drawable/ic_expend"
                    android:focusable="false"
                    android:hint="Цель въезда"
                    android:padding="16dp"
                    android:textColor="@color/blackColor"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/list_countries_error"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:gravity="right"
                    android:text="error"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/date_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_orange_background_grey"
                    android:hint="Дата въезда"
                    android:imeOptions="actionNext"
                    android:padding="16dp"
                    android:textColor="@color/blackColor"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/date_entry_error"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:gravity="right"
                    android:text="error"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/fifth_potent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="14dp"
                    android:text="Фото патента РФ:"
                    android:textColor="@color/blackColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/russian_patentA"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_orange_background_grey"
                        android:src="@drawable/id" />

                    <ImageView
                        android:id="@+id/russian_patentB"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_orange_background_grey"
                        android:src="@drawable/id" />
                </LinearLayout>

                <TextView
                    android:id="@+id/fifth_incorrect_patent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_baseline_error_outline_24"
                    android:drawablePadding="10dp"
                    android:text="Неверный логин или пароль"
                    android:textColor="@color/colorRed"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/fifth_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="14dp"
                    android:text="Фото квитанции об оплате патента:"
                    android:textColor="@color/blackColor" />

                <ImageView
                    android:id="@+id/receipt_patent"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/circle_orange_background_grey"
                    android:src="@drawable/id" />

                <TextView
                    android:id="@+id/fifth_incorrect_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_baseline_error_outline_24"
                    android:drawablePadding="10dp"
                    android:text="Неверный логин или пароль"
                    android:textColor="@color/colorRed"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/fifth_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="14dp"
                    android:text="Фото разрешение на работу:"
                    android:textColor="@color/blackColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/work_permitA"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_orange_background_grey"
                        android:src="@drawable/id" />

                    <ImageView
                        android:id="@+id/work_permitB"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_orange_background_grey"
                        android:src="@drawable/id" />
                </LinearLayout>

                <TextView
                    android:id="@+id/fifth_incorrect_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_baseline_error_outline_24"
                    android:drawablePadding="10dp"
                    android:text="Неверный логин или пароль"
                    android:textColor="@color/colorRed"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifth_2n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="14dp"
                    android:text="Фото 2НДФЛ:"
                    android:textColor="@color/blackColor" />

                <ImageView
                    android:id="@+id/photo_2NDFL"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/circle_orange_background_grey"
                    android:src="@drawable/id" />

                <TextView
                    android:id="@+id/fifth_incorrect_2NDFL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_baseline_error_outline_24"
                    android:drawablePadding="10dp"
                    android:text="Неверный логин или пароль"
                    android:textColor="@color/colorRed"
                    android:visibility="gone" />
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/contract_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_orange_background_grey"
                    android:drawableEnd="@drawable/ic_expend"
                    android:focusable="false"
                    android:hint="Тип договора"
                    android:padding="16dp"
                    android:textColor="@color/blackColor"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/contract_type_error"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:gravity="right"
                    android:text="error"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/fifth_contract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="14dp"
                    android:text="Фото договор - 1 и последняя страница:"
                    android:textColor="@color/blackColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/last_page_one"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_orange_background_grey"
                        android:src="@drawable/id" />

                    <ImageView
                        android:id="@+id/last_page_two"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_orange_background_grey"
                        android:src="@drawable/id" />
                </LinearLayout>

                <TextView
                    android:id="@+id/fifth_incorrect_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_baseline_error_outline_24"
                    android:drawablePadding="10dp"
                    android:text="Неверный логин или пароль"
                    android:textColor="@color/colorRed"
                    android:visibility="gone" />
            </LinearLayout>

            <!--            <TextView-->
            <!--                android:id="@+id/date_the_contract"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginLeft="16dp"-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                android:layout_marginRight="16dp"-->
            <!--                android:background="@drawable/circle_orange_background_edit"-->
            <!--                android:hint="Дата окончания договора"-->
            <!--                android:imeOptions="actionNext"-->
            <!--                android:padding="13dp"-->
            <!--                android:textColor="@color/blackColor"-->
            <!--                android:textSize="14dp" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:paddingLeft="14dp"
                android:text="Фото РВП:"
                android:textColor="@color/blackColor" />

            <ImageView
                android:id="@+id/photo_RVP"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/circle_orange_background_grey"
                android:src="@drawable/id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:paddingLeft="14dp"
                android:text="Фото ВНЖ:"
                android:textColor="@color/blackColor" />

            <ImageView
                android:id="@+id/photo_VNJ"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/circle_orange_background_grey"
                android:src="@drawable/id" />

            <Button
                android:id="@+id/bottom_loan_fifth"
                style="@style/RoundedOrangeBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="75dp"
                android:paddingRight="75dp"
                android:text="Следующий шаг"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/fifth_ste_access_restricted"
        layout="@layout/item_access_restricted"
        android:visibility="gone" />

    <include
        android:id="@+id/fifth_ste_no_connection"
        layout="@layout/item_no_connection"
        android:visibility="gone" />

    <include
        android:id="@+id/fifth_ste_technical_work"
        layout="@layout/item_technical_work"
        android:visibility="gone" />

    <include
