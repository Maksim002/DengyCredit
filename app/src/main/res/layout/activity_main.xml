<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.registration.login.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Вход"
        android:textColor="#001"
        android:textSize="30sp" />


        <AutoCompleteTextView
            android:id="@+id/main_text_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Логин"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_orange_background_edit"
            android:inputType="number"
            android:padding="16dp"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_orange_background_edit"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/main_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@null"
                android:hint="Пароль"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/main_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Показать"
                android:textColor="#FF9900" />
        </LinearLayout>

    <TextView
        android:id="@+id/main_incorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_error_outline_24"
        android:drawablePadding="10dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:text="Неверный логин или пароль"
        android:textColor="@color/colorRed"/>

    <CheckBox
        android:id="@+id/main_remember_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Запомнить логин"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="105dp" />

    <CheckBox
        android:id="@+id/main_login_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Вход по пин-коду"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="105dp" />

    <CheckBox
        android:id="@+id/main_touch_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Вход с помощью отпечатка"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="105dp" />

    <Button
        android:id="@+id/main_enter"
        style="@style/RoundedOrangeBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Войти"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Забыли пароль?"
        android:textColor="#FF9900"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Регистрация"
        android:textColor="#FF9900"
        android:textSize="18sp" />
</LinearLayout>